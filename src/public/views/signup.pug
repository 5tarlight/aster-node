extends layout

block head
  title Aster - 회원가입
  link(rel="stylesheet", href="/css/login.css")
  script(src="/js/signup.js")

block body
  .login-box
    input.input-email#input-email(type="email", name="email" placeholder='이메일')
    input.input-pw#input-password(type="password", name="password" placeholder='비밀번호')
    input.input-pw-re#input-password(type="password", name="password" placeholder='비밀번호 확인')
    .show-box
      a(href='/login') 로그인
      button.signup 회원가입